{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Current C++ File",
      "type": "shell",
      "command": "g++ -fdiagnostics-color=always -g \"${file}\" -o \"${fileBasenameNoExtension}.exe\" && echo Build successful.",
      "options": {
        "cwd": "${fileDirname}",
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "group": "build",
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true,
        "showReuseMessage": false
      }
    },
    {
      "label": "Run Current C++ File",
      "type": "shell",
      "command": "echo. && \"${fileBasenameNoExtension}.exe\"",
      "options": {
        "cwd": "${fileDirname}",
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "clear": false,
        "showReuseMessage": false
      }
    },
    {
      "label": "Build and Run Current C++ File",
      "dependsOn": ["Build Current C++ File", "Run Current C++ File"],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
